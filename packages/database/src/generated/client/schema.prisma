// MHWildsWiki - SQLite Compatible Schema v1.0
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model LargeMonster {
  id          Int      @id @default(autoincrement())
  gameId      String   @unique @map("game_id")
  nameEn      String   @map("name_en")
  nameJa      String   @map("name_ja")
  nameZh      String?  @map("name_zh")
  monsterType String   @map("monster_type")
  threatLevel String   @map("threat_level")
  elements    String   @default("")
  weaknesses  String   @default("")
  iconUrl     String?  @map("icon_url")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([gameId])
  @@map("large_monsters")
}

model Weapon {
  id            Int      @id @default(autoincrement())
  gameId        String   @unique @map("game_id")
  nameEn        String   @map("name_en")
  nameJa        String   @map("name_ja")
  nameZh        String?  @map("name_zh")
  weaponType    String   @map("weapon_type")
  rarity        Int      @default(1)
  attack        Int      @default(0)
  elementType   String?  @map("element_type")
  elementDamage Int?     @map("element_damage")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@index([gameId])
  @@map("weapons")
}

model Item {
  id        Int      @id @default(autoincrement())
  gameId    String   @unique @map("game_id")
  nameEn    String   @map("name_en")
  nameJa    String   @map("name_ja")
  nameZh    String?  @map("name_zh")
  category  String
  rarity    Int      @default(1)
  value     Int      @default(0)
  iconUrl   String?  @map("icon_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([gameId])
  @@map("items")
}

model Monster {
  id      Int    @id @default(autoincrement())
  game_id String @unique
  data    String

  @@map("monsters")
}
