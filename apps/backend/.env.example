# MHW2Wiki 生产环境配置文件
# 复制此文件为 .env.production 并填写实际值

# 数据库配置
DATABASE_URL="postgresql://mhw2wiki_user:your_secure_password@localhost:5432/mhw2wiki"

# 应用配置
NODE_ENV=production
PORT=4000

# API 配置
CORS_ORIGIN=https://your-domain.com
API_PREFIX=/api

# JWT 密钥 (如果使用认证)
JWT_SECRET=your-jwt-secret-key

# 缓存配置 (可选)
CACHE_TTL=3600

# 日志级别
LOG_LEVEL=info

# GraphQL 配置
GRAPHQL_PLAYGROUND=false
GRAPHQL_INTROSPECTION=false

# 文件上传配置 (如果需要)
MAX_FILE_SIZE=10mb
UPLOAD_DEST=./uploads

# 监控配置 (可选)
SENTRY_DSN=https://your-sentry-dsn
